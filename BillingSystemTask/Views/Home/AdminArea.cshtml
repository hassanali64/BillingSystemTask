@model IEnumerable<BillingSystemTask.Models.User>
<head>
    <link href="https://cdn.datatables.net/1.13.4/css/dataTables.bootstrap5.min.css" rel="stylesheet" />
</head>

@{
    ViewBag.Title = "Index";
}


@if (TempData["InsertData"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["InsertData"]
    </div>
}
@if (TempData["UpdateData"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["UpdateData"]
    </div>
}
@if (TempData["DeleteMessage"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["DeleteMessage"]
    </div>
}
<h3>@TempData["InsertData"]</h3>
<div class="d-flex justify-content-between mb-2">
    <h3 class="ml-4">Users List</h3>
    <p>
        @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary bg-primary text-white" })
    </p>
</div>
<table id="billingTable" class="table table-striped table-bordered dataTables_wrapper ">
    <thead>
        <tr>


            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Password)
            </th>


            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>


                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Password)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-primary" })
                    @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-secondary" })
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }
    </tbody>
</table>
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.13.4/js/dataTables.bootstrap5.min.js"></script>


<script>
    $(function () {
        $('#billingTable').DataTable();
    });
</script>

