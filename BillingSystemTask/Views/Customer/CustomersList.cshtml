@model IEnumerable<BillingSystemTask.Models.Customers>
<head>
    <link href="https://cdn.datatables.net/1.13.4/css/dataTables.bootstrap5.min.css" rel="stylesheet" />
</head>

@{
    ViewBag.Title = "CustomersList";
}


@if (TempData["InsertData"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["InsertData"]
    </div>
}
@if (TempData["UpdateData"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["UpdateData"]
    </div>
}
@if (TempData["DeleteMessage"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["DeleteMessage"]
    </div>
}
<h3>@TempData["InsertData"]</h3>


<h2>CustomersList</h2>

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary bg-primary text-white" })
</p>
<table id="billingTable" class="table table-striped table-bordered dataTables_wrapper ">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CustomerName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RegistrationDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CustomerName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RegistrationDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserId)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-primary" }) 
                    @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-secondary" }) 
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
                </td>

            </tr>
        }
        
    </tbody>

</table>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.13.4/js/dataTables.bootstrap5.min.js"></script>


<script>
    $(function () {
        $('#billingTable').DataTable();
    });
</script>