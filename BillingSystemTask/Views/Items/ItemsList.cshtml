@model IEnumerable<BillingSystemTask.Models.Items>
<head>
    <link href="https://cdn.datatables.net/1.13.4/css/dataTables.bootstrap5.min.css" rel="stylesheet" />
</head>

@{
    ViewBag.Title = "ItemsList";
}
@if (TempData["InsertData"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["InsertData"]
    </div>
}
@if (TempData["UpdateData"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["UpdateData"]
    </div>
}
@if (TempData["DeleteMessage"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["DeleteMessage"]
    </div>
}
<h3>@TempData["InsertData"]</h3>

<h2>ItemsList</h2>

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary bg-primary text-white" })
</p>
<table id="billing" class="table table-striped table-bordered dataTables_wrapper ">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ItemName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.fee)
            </th>
            <th>Actions</th>
            
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ItemName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.fee)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.ItemId }, new { @class = "btn btn-primary" })
                    @Html.ActionLink("Details", "Details", new { id = item.ItemId }, new { @class = "btn btn-secondary" })
                    @Html.ActionLink("Delete", "Delete", new { id = item.ItemId }, new { @class = "btn btn-danger" })
                </td>
                @*  <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.ItemId }) |
            @Html.ActionLink("Details", "Details", new { id = item.ItemId }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.ItemId })
        </td>*@
            </tr>
        }
    </tbody>
</table>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.13.4/js/dataTables.bootstrap5.min.js"></script>


<script>
    $(function () {
        $('#billing').DataTable();
    });
</script>